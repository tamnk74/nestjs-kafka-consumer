{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "ts-node test/main.e2e-spec.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run -f src/common/configs/orm.config",
    "migration:create": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:create -f src/common/configs/orm.config -n",
    "migration:generate": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -f src/common/configs/orm.config -n",
    "migration:revert": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert -f src/common/configs/orm.config",
    "db:rollback": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js schema:drop -f src/common/configs/orm.config",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "cli:error": "ts-node -r tsconfig-paths/register ./src/cli/ export"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "4.1.0",
    "@grpc/grpc-js": "^1.4.1",
    "@grpc/proto-loader": "^0.6.5",
    "@nestjs/axios": "^0.0.6",
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "1.0.1",
    "@nestjs/core": "8.0.1",
    "@nestjs/microservices": "^8.1.1",
    "@nestjs/platform-fastify": "^8.0.1",
    "@nestjs/typeorm": "8.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "^0.13.2",
    "date-fns": "^2.25.0",
    "fastify": "3.18.1",
    "fastify-compress": "^3.6.0",
    "fastify-helmet": "^5.3.2",
    "kafkajs": "^1.16.0",
    "module-alias": "2.2.2",
    "pg": "8.6.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "tslib": "2.3.0",
    "typeorm": "0.2.34",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.1.1",
    "@types/async": "^3.2.8",
    "@types/ejs": "^3.1.0",
    "@types/glob": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/newman": "^5.1.4",
    "@types/node": "^14.17.27",
    "@types/oracledb": "^5.2.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^4.33.0",
    "async": "^3.2.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-prettier": "^3.4.1",
    "fast-glob": "^3.2.7",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "newman": "^5.3.0",
    "newman-reporter-htmlextra": "^1.22.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4",
    "yargs": "^17.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^src/(.*)": [
        "<rootDir>/src/$1"
      ]
    },
    "maxWorkers": "50%"
  },
  "lint-staged": {
    "*.ts": "eslint --ext .ts --fix",
    "*.{js,css,md,json,ts,svg}": "prettier --write"
  }
}
